        height: 120rpx;
        background: #f5f5f5;
        border-radius: 24rpx;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 40rpx;
        flex-shrink: 0;
        border: 2rpx solid #e0e0e0;
}
.icon-image {
        width: 60rpx;
        height: 60rpx;
}
.button-content {
        flex: 1;
        display: flex;
        flex-direction: column;
}
.button-text {
        font-size: 40rpx;
        font-weight: 600;
        color: #333;
        margin-bottom: 12rpx;
}
.button-desc {
        font-size: 28rpx;
